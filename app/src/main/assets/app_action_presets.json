{
  "version": 1,
  "apps": {
    "whatsapp_business": {
      "description": "WhatsApp Business automations",
      "actions": {
        "send_message_contact": {
          "tool": "send_whatsapp_message",
          "description": "Open WhatsApp Business, search contact, type message, and send",
          "defaults": {
            "whatsapp_type": "business"
          },
          "allowed_inputs": [
            "contact_name",
            "message",
            "whatsapp_type",
            "phone_number",
            "strict_contact_match"
          ],
          "required_inputs": [
            "contact_name",
            "message"
          ]
        }
      }
    },
