<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PocketMCP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/text_color_primary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="materialCardViewStyle">@style/Widget.PocketMCP.Card</item>
        <item name="materialButtonStyle">@style/Widget.PocketMCP.Button.Primary</item>
        <item name="textInputStyle">@style/Widget.PocketMCP.TextInputLayout</item>
        <item name="android:windowBackground">@drawable/bg_app_gradient</item>
    </style>

    <style name="Widget.PocketMCP.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">22dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/card_stroke_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/card_background_color</item>
    </style>

    <style name="Widget.PocketMCP.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_primary_text</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/ripple_primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.PocketMCP.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_secondary_text</item>
        <item name="rippleColor">@color/ripple_neutral</item>
        <item name="strokeColor">@color/card_stroke_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.PocketMCP.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_secondary_text</item>
        <item name="rippleColor">@color/ripple_neutral</item>
    </style>

    <style name="Widget.PocketMCP.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/card_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="hintTextColor">@color/text_color_muted</item>
    </style>
</resources>
